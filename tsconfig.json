{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@sonder/utils/*": ["packages/utils/*"],
      "@sonder/types/*": ["packages/types/*"],
      "@sonder/ui/*": ["packages/ui/*"]
    }
  },
  "include": ["apps", "packages"],
  "exclude": ["node_modules", "dist"]
}
